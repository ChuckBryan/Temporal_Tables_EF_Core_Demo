
@model IEnumerable<EmployeeManager.Web.Models.Home.EmployeeIndexModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="page-header">
    <h1>Employees</h1>
    
</div>

<table class="table table-condensed table-bordered table-striped">
    <caption>
        <div class="pull-right">
            <a asp-action="AddEmployee" class="btn btn-primary">Add Employee</a>
        </div>
    </caption>
     <thead>
   
    <tr>
        <th>Employee</th>
        <th class="text-center">Department</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <tr>
            <td colspan="3" class="bg-info"><em>There are no Employees.</em></td>
        </tr>
    }
    else
    {
        foreach (var employee in @Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td class="text-center">@employee.Department</td>
                <td>
                    <div class="pull-right">
                        <a asp-action="UpdateEmployee" asp-route-id="@employee.EmployeeId" class="btn btn-success">Update</a>
                    </div>
                </td>
            </tr>
        }
    }

    </tbody>
</table>

