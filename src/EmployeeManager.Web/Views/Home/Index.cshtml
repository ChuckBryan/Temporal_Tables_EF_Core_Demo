
@model IEnumerable<EmployeeManager.Web.Models.Home.EmployeeIndexModel>
@{
    ViewData["Title"] = "Home Page";
}

<h1>Employees</h1>
<table class="table table-condensed table-bordered table-striped">
    <caption>
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a asp-action="Index">Current</a></li>
            <li role="presentation"><a asp-action="TwoMinutesAgo">2 Minutes Ago</a></li>
            <li role="presentation"><a asp-action="ThirtyDaysAgo">Thirty Days Ago</a></li>
            <li role="presentation"><a asp-action="FortyDaysAgo">Forty Days Ago</a></li>
        </ul>

    </caption>
     <thead>
   
     <tr>
         <th class="text-center">Employee Id</th>
         <th>Employee</th>
         <th class="text-center">Department</th>
         <th></th>
     </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <tr>
            <td colspan="3" class="bg-info"><em>There are no Employees.</em></td>
        </tr>
    }
    else
    {
        foreach (var employee in @Model)
        {
            <tr class="@(employee.EmployeeId == 5 || employee.EmployeeId == 8 ? "info": "")">
                <td class="text-center">@employee.EmployeeIdDisplay</td>
                <td>@employee.Name</td>
                <td class="text-center">@employee.Department</td>
                <td>
                    <div class="pull-right">
                        <a asp-action="DeleteEmployee" asp-route-id="@employee.EmployeeId" class="btn btn-danger">Delete</a>
                        <a asp-action="UpdateEmployee" asp-route-id="@employee.EmployeeId" class="btn btn-success">Update</a>
                    </div>
                </td>
            </tr>
        }
    }

    </tbody>
</table>

