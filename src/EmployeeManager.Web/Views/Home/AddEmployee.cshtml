@using EmployeeManager.Web.Models.Home

 ViewData["Title"] = "Add Employee";

@model EmployeeAddModel
<h1>Add Employee</h1>
<hr />
<form asp-action="AddEmployee" class="form-horizontal">
    
    
        <div class="form-group">
            <label asp-for="FirstName" class="col-xs-12 col-md-3"></label>
            <div class="col-xs-12 col-md-9">
                <input asp-for="FirstName" class="form-control" autocomplete="off"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="col-xs-12 col-md-3"></label>
            <div class="col-xs-12 col-md-9">
                <input asp-for="LastName" class="form-control"  autocomplete="off"/>
                <span asp-validation-for="LastName"  class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Department" class="col-xs-12 col-md-3"></label>
            <div class="col-xs-12 col-md-9">
                <input asp-for="Department" class="form-control" autocomplete="off" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>

        <div class="col-xs-12 col-md-offset-3">
            <button type="submit" class="btn btn-success">Add Employee</button>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
</form>